<?xml version="1.0" encoding="utf-8"?>

<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <gradient android:angle="45" />
    <!--设置边距-->
    <padding
        android:bottom="9dp"
        android:left="9dp"
        android:right="9dp"
        android:top="9dp" />
    <!-- 设置圆角矩形 -->
    <corners android:radius="9dp" />


    <!--设置边框粗细和颜色-->
    <stroke
        android:width="2px"
        android:color="#838B8B" />

</shape>
